<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.android.inclassassignment06_rocioc.SecondActivity">


    <EditText
        android:id="@+id/family_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Family Last name" />

    <EditText
        android:id="@+id/number_of_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number of Members" />

    <CheckBox
        android:id="@+id/coming_to_party"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coming to the Party!" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="submitFamily"
        android:text="Submit" />

</LinearLayout>
